set $mod Mod1
font pango:GohuFont Nerd Font 22

#---i3 DEBUGGING (F1-3)---
bindsym $mod+F1 restart
bindsym $mod+F2 exec --no-startup-id /home/hty/.config/i3/lemonbar.sh
bindsym $mod+F3 exec --no-startup-id /home/hty/.config/i3/conky.sh

#---APPLICATIONS (F4-F8)---
bindsym $mod+Return exec i3-sensible-terminal
bindsym $mod+Tab kill

bindsym $mod+F4 exec chromium --force-device-scale-factor=1.6
bindsym $mod+F5 exec nemo
bindsym $mod+F6 exec slack
bindsym $mod+F7 exec code
bindsym $mod+F8 exec i3-sensible-terminal

bindsym $mod+apostrophe exec j4-dmenu-desktop --dmenu="dmenu -i -fn 'GohuFont Nerd Font-23' -nb '#3B4252' -nf '#D8DEE9' -sb '#BF616A' -sf '#ECEFF4'" --term="i3-sensible-terminal"
bindsym $mod+semicolon exec j4-dmenu-desktop --dmenu="dmenu -i -fn 'GohuFont Nerd Font-23' -nb '#3B4252' -nf '#D8DEE9' -sb '#BF616A' -sf '#ECEFF4'" --term="i3-sensible-terminal"

#---AUXILLARY COMMANDS (F9-12)---
bindsym $mod+F9 exec i3lock-next 'UNLOCK TO CONTINUE' 'GohuFont Nerd Font' 40
bindsym $mod+F10 exec systemctl suspend && i3lock-next 'UNLOCK TO CONTINUE' '$
bindsym $mod+F11 exec systemctl reboot
bindsym $mod+F12 exec systemctl poweroff

#---WINDOW GAPS---
gaps inner 17
gaps outer 17

new_window pixel 5
smart_borders on

#---COLORS---
#class                 border  backgr. text    indicator child_border
client.focused          #D8DEE9 #ECEFF4 #3B4252 #D8DEE9   #D8DEE9
client.focused_inactive #D8DEE9 #ECEFF4 #3B4252 #D8DEE9   #D8DEE9
client.unfocused        #3B4252 #3B4252 #D8DEE9 #3B4252   #3B4252
client.urgent           #BF616A #3B4252 #BF616A #BF616A   #BF616A
client.placeholder      #3B4252 #3B4252 #D8DEE9 #3B4252   #3B4252

client.background       #D8DEE9

#---BACKGROUND STUFF---
exec --no-startup-id python3 /home/hty/.config/i3/lemonbar_status.py
exec --no-startup-id conky -d -c /home/hty/.config/i3/.conkyrc
exec --no-startup-id feh --bg-scale /home/hty/Pictures/circle.jpg

#---LOCK SCREEN---
exec --no-startup-id i3lock-next 'UNLOCK TO CONTINUE' 'GohuFont Nerd Font' 40
exec --no-startup-id xautolock -time 10 -locker "i3lock-next 'UNLOCK TO CONTINUE' 'GohuFont Nerd Font' 40"

#---MOUSE SCROLLING---
exec --no-startup-id synclient NaturalScrolling=1

#---LAPTOP FN KEYS---
bindsym XF86KbdBrightnessUp exec /usr/local/bin/kb-light.py + 2
bindsym XF86KbdBrightnessDown exec /usr/local/bin/kb-light.py - 2
bindsym XF86MonBrightnessUp exec xbacklight -inc 2
bindsym XF86MonBrightnessDown exec xbacklight -dec 2
bindsym XF86AudioRaiseVolume exec amixer sset 'Master' 2%+
bindsym XF86AudioLowerVolume exec amixer sset 'Master' 2%-
bindsym XF86AudioMute exec amixer sset 'Master' toggle
bindsym Print exec scrot '%Y-%m-%d-%s_screenshot_$wx$h.jpg' -e 'mv $f ~/Pictures/'

#---WINDOW MANAGING---
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

bindsym $mod+a move left
bindsym $mod+s move down
bindsym $mod+w move up
bindsym $mod+d move right

bindsym $mod+h split h
bindsym $mod+v split v
bindsym $mod+f fullscreen toggle
bindsym $mod+bracketleft layout tabbed
bindsym $mod+bracketright layout toggle split
bindsym $mod+space floating toggle
floating_modifier $mod
bindsym $mod+backslash focus mode_toggle
bindsym $mod+p focus parent

#---WORKSPACES---
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 move container to workspace $ws1
bindsym $mod+7 move container to workspace $ws2
bindsym $mod+8 move container to workspace $ws3
bindsym $mod+9 move container to workspace $ws4
bindsym $mod+10 move container to workspace $ws5

#---RESIZING---
bindsym $mod+r mode resize
mode "resize" {
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Down resize grow height 10 px or 10 ppt
        bindsym Up resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt
	
	bindsym w resize shrink width 10 px or 10 ppt
        bindsym a resize grow height 10 px or 10 ppt
        bindsym s resize shrink height 10 px or 10 ppt
        bindsym d resize grow width 10 px or 10 ppt

        # back to normal
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
